<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig
	PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"
	"http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<!-- 이 문서는 ibatis의 환경 설정 파일입니다. -->
<sqlMapConfig>
	<!-- DB와 연결하는 정보를 properties 파일에 설정해 놓고 
	이 properties 파일의 내용을 읽어 올 수 있도록 설정한다. -->
	<properties resource="dbinfo.properties" />
	<!-- 각각의 sqlMap파일의 네임스페이스와 id속성값을 연결해서 실행할 쿼리문을 선택한다 -->
	<settings useStatementNamespaces="true" />
	<!-- 쿼리문에 사용할 VO객체는 패키지 이름을 포함한 전체 이름을 기술해야 사용할 수 있다. 
	문장이 길어지는 것을 방지하기 위해 alias를 설정하여 사용한다. 
	
	형식 : <typeAlias alias="alias명" type="클래스의 전체 이름"-->
	<!-- <typeAlias alias="lprodVo" type="kr.or.ddit.basic.LprodVO"/> -->
	<typeAlias alias="recipeVo" type="vo.RecipeVO"/>
	<typeAlias alias="ingredientVo" type="vo.IngredientVO"/>
	<typeAlias alias="methodsVo" type="vo.MethodsVO"/>
	
	<transactionManager type="JDBC">
		<dataSource type="SIMPLE">
			<property name="JDBC.Driver" value="${driver}"/>
			<property name="JDBC.ConnectionURL" value="${url}"/>
			<property name="JDBC.Username" value="${user}"/>
			<property name="JDBC.Password" value="${pass}"/>
		</dataSource>
	</transactionManager>
	
	<!-- 실행할 SQL문이 저장될 xml문서 등록하기
	형식 : <sqlMap resource="경로명/파일명.xml"/> -->
	<sqlMap resource="mapper/member.xml"></sqlMap>
	<sqlMap resource="mapper/lprod.xml"></sqlMap>
	<sqlMap resource="mapper/mypage.xml"></sqlMap>
	<sqlMap resource="mapper/dish.xml"></sqlMap>
	<sqlMap resource="mapper/post.xml"></sqlMap>
	<sqlMap resource="mapper/common.xml"></sqlMap>
	<sqlMap resource="mapper/prod.xml"></sqlMap>
	<sqlMap resource="mapper/cart.xml"></sqlMap>

	
</sqlMapConfig>